root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{kt,kts}]
indent_size = 4
indent_style = space
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
ktlint_code_style = intellij_idea
